<% title "Tag - " + @tag.tag_name %>

<style type="text/css">
<%-if @tag.height.to_i > 400%>
#tag_preview {
	float:left;
	margin-right: 10px;
	margin-bottom: 10px;
};
<%-elsif @tag.width.to_i < 400%>
#tag_preview {
	float:right;
};
<%-else %>
#tag_preview {
	margin-bottom: 10px;
};
<%end%>
<%-if @tag.width.to_i > 600%>
#wrapper {
	width:<%=@tag.width%>px;	
}
<%-else %>
#wrapper {
	width:600px;
}
<%-end%>
</style>

<div id="wrapper">
<div id="tag_details">

<iframe id="tag_preview" src="<%= @tag.preview_url %>" style="<%=@tag.css_size%>;border:1px dashed #660099"></iframe>
<p>
  <strong>Network:</strong>
  <%= link_to(@tag.network.network_name, {:action => "show", :controller=>"networks", :id => @tag.network_id})%>
</p>
<p>
  <strong>Size:</strong>
  <%=h @tag.size %>
</p>
<p>
  <strong>Value:</strong>
  $<%=h @tag.value_s %>
</p>
<p>
  <strong>Enabled:</strong>
  <%=h @tag.enabled_s %>
</p>
<p>
  <strong>Always Fill:</strong>
  <%=h @tag.always_fill_s %>
</p>
<p>
  <strong>Sample Rate:</strong>
  <%=h @tag.sample_rate %>
</p>
<p>
  <strong>Tier:</strong>
  <%=h @tag.tier %>
</p>
<p>
  <strong>Frequency Cap:</strong>
  <%=h @tag.frequency_cap %>
</p>
<p>
  <strong>Rejection Time:</strong>
  <%=h @tag.rejection_time %>
</p>
</div>
<br clear="all"/>
<strong>Tag:</strong><br />
<%if @tag.tag.blank? -%>
  <i>Using <%= @tag.network.network_name %>  template</i>. <%= link_to("Edit Network Template", {:action => "edit", :controller=>"networks", :id => @tag.network_id})%>
<%else %>
<%= pretty_tag @tag.tag %>
<%end -%>
<p>
  <%= link_to "Edit", edit_tag_path(@tag) %> |
  <%= link_to "Delete", @tag, :confirm => 'Are you sure?', :method => :delete, :action => "destroy" %> |
  <%= link_to "View All", tags_path %>
</p>
</div>
