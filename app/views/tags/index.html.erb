<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag name</th>
    <th>Enabled</th>
    <th>Always fill</th>
    <th>Sample rate</th>
    <th>Tier</th>
    <th>Frequency cap</th>
    <th>Rejection cap</th>
    <th>Rejection time</th>
    <th>Tag</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%=h tag.tag_name %></td>
    <td><%=h tag.enabled %></td>
    <td><%=h tag.always_fill %></td>
    <td><%=h tag.sample_rate %></td>
    <td><%=h tag.tier %></td>
    <td><%=h tag.frequency_cap %></td>
    <td><%=h tag.rejection_cap %></td>
    <td><%=h tag.rejection_time %></td>
    <td><%=h tag.tag %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_tag_path %>