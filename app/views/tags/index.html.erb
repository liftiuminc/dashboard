<h1>Listing tags</h1>

<table border="1">
  <tr>
    <th>Publisher</th>
    <th>Tag name</th>
    <th>Size</th>
    <th>Enabled</th>
    <th>Always fill</th>
    <th>Sample rate</th>
    <th>Tier</th>
    <th>Freq cap</th>
    <th>Rej cap</th>
    <th>Rej time</th>
    <th colspan="3">Actions</th>
    <th>Fill Rate Graph</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%=h tag.publisher.publisher_name %></td>
    <td><%=h tag.tag_name %></td>
    <td><%=h tag.size %></td>
    <td><%=h tag.enabled %></td>
    <td><%=h tag.always_fill %></td>
    <td><%=h tag.sample_rate %></td>
    <td><%=h tag.tier %></td>
    <td><%=h tag.frequency_cap %></td>
    <td><%=h tag.rejection_cap %></td>
    <td><%=h tag.rejection_time %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><img src="http://dev.liftium.com:4567/sparkline?net=<%=tag.network_id%>&tag=<%=tag.id%>&range=3h&width=100&height=50">
  </tr>
<% end %>
</table>

<br />

