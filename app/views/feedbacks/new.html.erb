<h1>Feedback</h1>
<p>Please leave us feedback, it's really appreciated.</p>
<% form_for :feedback, @feedback, :url => feedback_path, :html => {:id => "feedback_form"} do |f| -%>
<% unless @error_message.blank? %>
<p class="error">
	<%=h @error_message %>
</p>
<% end %>
<p>
	<%= f.label 'subject' %>
	<%= f.select 'subject', ['Suggestion', 'Problem', 'Question', 'Other'] %>
</p>
<p>
   <%= f.label 'Your Email' %>
   <%= text_field_tag 'email', current_user ? current_user.email : "" %>
</p>
<p>
  <%= f.label 'comment' %><br />
  <%= f.text_area 'comment', :rows => 10, :cols => 30 %>
</p>
<p><%= f.submit 'Send' %></p>

<% end -%>

