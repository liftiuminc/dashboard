<% title "Network" %>

<p>
  <strong>Network Name:</strong>
  <%=h @network.network_name %>
</p>
<p>
  <strong>Website:</strong>
  <a href="<%=h @network.website %>" target="_blank"><%=h @network.website %></a>
</p>
<p>
  <strong>Pay Type:</strong>
  <%=h @network.pay_type %>
</p>
<p>
  <strong>Enabled:</strong>
  <%=h @network.enabled_s %>
</p>
<p>
  <strong>Brand Safety Level:</strong>
  <%=h @network.brand_safety_level %>
</p>
<p>
  <strong>Supports Threshold (backup/default tags):</strong>
  <%=h @network.supports_threshold_s %>
</p>
<p>
