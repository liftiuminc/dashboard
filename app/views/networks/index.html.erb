<h1>Listing networks</h1>

<table>
  <tr>
    <th>Network name</th>
    <th>Enabled</th>
    <th>Supports threshold</th>
    <th>Pay type</th>
    <th>Always fill</th>
  </tr>

<% @networks.each do |network| %>
  <tr>
    <td><%=h network.network_name %></td>
    <td><%=h network.enabled %></td>
    <td><%=h network.supports_threshold %></td>
    <td><%=h network.pay_type %></td>
    <td><%=h network.always_fill %></td>
    <td><%= link_to 'Show', network %></td>
    <td><%= link_to 'Edit', edit_network_path(network) %></td>
    <td><%= link_to 'Destroy', network, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New network', new_network_path %>