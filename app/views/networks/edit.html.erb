<h1>Editing network</h1>
<% @paytypes = Array["Per Impression", "Per Click", "Affliate" ] %>


<% form_for(@network) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :network_name %><br />
    <%= f.text_field :network_name %>
  </p>
  <p>
    <%= f.label :enabled %><br />
    <%= f.check_box :enabled %>
  </p>
  <p>
    <%= f.label :supports_threshold %><br />
    <%= f.check_box :supports_threshold %>
  </p>
  <p>
    <%= f.label :pay_type %><br />
    <%= select("network", "pay_type", @paytypes) %>

  </p>
  <p>
    <%= f.label :always_fill %><br />
    <%= f.check_box :always_fill %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @network %> |
<%= link_to 'Back', networks_path %>
