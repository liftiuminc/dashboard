<div id="container">
        <div class="shell">
                <div id="login">
                        <div class="rounded">
                                <div class="rounded-t">
                                        <div class="rounded-b">
                                                <h2>Login</h2>
                                                <div class="rounded-cnt">
							<% form_for @user_session, :url => user_session_path do |f| %>
  								<%= f.error_messages %>
                                                                <div class="form">
                                                                        <label>E-mail</label>
                                                                        <span class="field"><span><input type="text" name="user_session[email]"/></span></span>

                                                                        <label>Password</label>
                                                                        <span class="field"><span><input type="password" name="user_session[password]"/></span></span>

                                                                        <div class="active-scaffold">
										<input type="submit" class="submit" value="Login">
										<%= link_to "Forgot password", new_password_reset_path %>
                                                                        </div>
                                                                </div>
                                                        </form>
							<% end %>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>
</div>
